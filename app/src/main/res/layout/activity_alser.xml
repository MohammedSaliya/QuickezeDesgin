<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AlserActivity">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#215f7e">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="All Service "
            android:textColor="#fff"
            android:textSize="24dp" />


        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:src="@drawable/logolow" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/electrician"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_service"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/electrician" />


                <TextView
                    android:id="@+id/title_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Electrician"
                    android:textColor="#215f7e"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="90dp"
                android:background="#afa1a1" />

            <LinearLayout
                android:id="@+id/plumper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_plumper"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/electrician" />


                <TextView
                    android:id="@+id/title_plumper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Plumper"
                    android:textColor="#215f7e"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="90dp"
                android:background="#afa1a1" />


            <LinearLayout
                android:id="@+id/carpenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_Carpenter"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/electrician" />


                <TextView
                    android:id="@+id/title_Carpenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Carpenter"
                    android:textColor="#215f7e"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="90dp"
                android:background="#afa1a1" />


            <LinearLayout
                android:id="@+id/pest_control"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_Pest"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/electrician" />


                <TextView
                    android:id="@+id/title_Pest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Pest Control"
                    android:textColor="#215f7e"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="90dp"
                android:background="#afa1a1" />


            <LinearLayout
                android:id="@+id/home_deep_cleaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_home"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/electrician" />


                <TextView
                    android:id="@+id/title_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Home Deep Cleaning"
                    android:textColor="#215f7e"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="90dp"
                android:background="#afa1a1" />

            <LinearLayout
                android:id="@+id/sofa_cleaing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_Sofa"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/electrician" />


                <TextView
                    android:id="@+id/title_Sofa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Sofa Cleaning"
                    android:textColor="#215f7e"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="90dp"
                android:background="#afa1a1" />

            <LinearLayout
                android:id="@+id/ac_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_acservice"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/electrician" />


                <TextView
                    android:id="@+id/title_acervice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="AC Service"
                    android:textColor="#215f7e"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="90dp"
                android:background="#afa1a1" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>